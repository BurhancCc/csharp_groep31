@model csharp_groep31.Models.Enclosure
@using csharp_groep31.Enums

@{
    ViewData["Title"] = "Create";
}

@{
    // Niet hardcoded
    var habitatTypes = Enum.GetNames(typeof(HabitatType));
    var habitatTypesString = string.Join(", ", habitatTypes);
}

<h1>Create</h1>

<h4>Enclosure</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Name of enclosure"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Climate" class="control-label"></label>
                <select asp-for="Climate" class="form-control" asp-items="Html.GetEnumSelectList<Climate>()">
                </select>
                <span asp-validation-for="Climate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HabitatType" class="control-label"></label>
                <input asp-for="HabitatType" class="form-control"
                       placeholder="e.g. Grassland, Aquatic" />
                <small class="form-text text-muted">
                    Choose from @habitatTypesString with commas inbetween. Example: <strong>Grassland, Aquatic</strong>.
                    For None write <strong>None</strong>
                </small>
                <span asp-validation-for="HabitatType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SecurityLevel" class="control-label"></label>
                <select asp-for="SecurityLevel" class="form-control" asp-items="Html.GetEnumSelectList<SecurityLevel>()">
                </select>
                <span asp-validation-for="SecurityLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Size" class="control-label"></label>
                <input asp-for="Size" class="form-control" placeholder="Size of enclosure as a number above 1"/>
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
