@model csharp_groep31.Models.Animal

@{
    ViewData["Title"] = "Details";
}
@{
    var title = TempData["ActionTitle"] as string;
    var raw = TempData["ActionMessages"] as string;
    var msgs = string.IsNullOrWhiteSpace(raw) ? new List<string>() : raw.Split("||").ToList();
    var success = TempData["ActionSuccess"] as bool?;
}

<h1>Details</h1>

<div>
    <h4>Animal</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Species)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Species)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Size)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Size)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DietaryClass)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DietaryClass)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ActivityPattern)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ActivityPattern)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Prey)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Prey)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Enclosure)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Enclosure.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SpaceRequirement)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SpaceRequirement)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SecurityRequirement)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SecurityRequirement)
        </dd>
    </dl>
</div>

<hr />

<h4>Actions</h4>

<div class="d-flex flex-wrap gap-2 mb-3">
    <form asp-controller="AnimalActions" asp-action="Sunrise" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.Id" />
        <button class="btn btn-primary" type="submit">Sunrise</button>
    </form>

    <form asp-controller="AnimalActions" asp-action="Sunset" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.Id" />
        <button class="btn btn-primary" type="submit">Sunset</button>
    </form>

    <form asp-controller="AnimalActions" asp-action="FeedingTime" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.Id" />
        <button class="btn btn-success" type="submit">FeedingTime</button>
    </form>

    <form asp-controller="AnimalActions" asp-action="CheckConstraints" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.Id" />
        <button class="btn btn-warning" type="submit">CheckConstraints</button>
    </form>
</div>

@if (!string.IsNullOrWhiteSpace(title))
{
    <div class="alert @(success == true ? "alert-success" : "alert-danger")">
        <strong>@title</strong>
        <ul class="mb-0">
            @foreach (var m in msgs)
            {
                <li>@m</li>
            }
        </ul>
    </div>
}

<hr />

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
