@model csharp_groep31.Models.Category

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
        <hr />
        <h4>Dieren in deze categorie</h4>

        @if (Model.Animals != null && Model.Animals.Any())
        {
            <ul>
                @foreach (var a in Model.Animals.OrderBy(a => a.Name))
                {
                    <li>
                        @a.Name (@a.Species)
                        <form asp-action="RemoveAnimal" method="post" style="display:inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="categoryId" value="@Model.Id" />
                            <input type="hidden" name="animalId" value="@a.Id" />
                            <button type="submit" class="btn btn-sm btn-danger">Loskoppelen</button>
                        </form>
                    </li>
                }
            </ul>
        }
        else
        {
            <p><em>Geen dieren gekoppeld.</em></p>
        }

        <hr />
        <h4>Bestaand dier koppelen aan deze categorie</h4>

        <form asp-action="AddAnimal" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="categoryId" value="@Model.Id" />

            <div class="form-group">
                <label>Kies dier (zonder categorie)</label>
                <select class="form-control" name="animalId" asp-items="ViewBag.UnassignedAnimals"></select>
            </div>

            <button type="submit" class="btn btn-primary mt-2">Koppelen</button>
        </form>

    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
